 
@model Marmitex.Web.ViewModels.SaladaViewModel

 
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">


<div class="container">  
    <h4>Cadastro de Salada</h4>  
    <form method="POST" asp-action="Registro" asp-controller="Salada">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" >
        <div class="form-group">
            <label>Nome:</label>
            <input autofocus class="form-control" asp-for="Nome" placeholder="Nome">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>       
        <input type="submit" value="Salvar" class="btn btn-success" />
    </form>
</div>
<br>
 
    
@if(Model.Saladas.Any())
{    
    <div class="container">
        <h2>Misturas do dia</h2>        
        <table class="table">
            <thead>
            <tr>
                <th>Nome</th>                
                <th>Dia</th>
                <th>Editar</th>
                <th>Excluir</th>
            </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.Saladas)
                {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Data.ToShortDateString()</td>
                    <td><a href="/Salada/Registro/@item.Id"><i class="fa fa-edit"></i></a></td>
                    <td><a href="/Salada/Delete/@item.Id"><i class="fa fa-trash"></i></a></td>                  
                </tr>   
                }         
            </tbody>
        </table>
    </div>
}else{
    <h3>Não há saladas cadastradas ainda hoje, @DateTime.Now.ToShortDateString()</h3>
}

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
 
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>

 

 


 