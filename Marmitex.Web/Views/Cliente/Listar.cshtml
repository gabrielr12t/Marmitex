@model IEnumerable<Marmitex.Web.ViewModels.ClienteViewModel>

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

<div class="container">
  <h2>Lista de cliente</h2>
  <a href="/Cliente/Registro/">Registrar cliente</a>
  <table class="table">
    <thead>
      <tr>
        <th>Nome</th>                
        <th>Rua</th>
        <th>Número da rua</th>
        <th>Bairro</th>
        <th>Número casa</th>
        <th>Editar</th>
        <th>Excluir</th>
      </tr>
    </thead>
    <tbody id="tabelaClientes">
        @foreach (var item in Model)
        {
          <tr>
            <td>@item.Nome</td>
            <td>@item.Rua</td>
            <td>@item.RuaNumero</td>
            <td>@item.Bairro</td>
            <td>@item.NumeroCasa</td>
            <td><a href="/Cliente/Registro/@item.Id"><i class="fa fa-edit"></i></a></td>
            <td><a href="#" rel="@item.Id" class="excluirCliente" ><i class="fa fa-trash"></i></a></td>
          </tr>   
        }         
    </tbody>
  </table>
</div>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
<script src="~/js/Cliente/Registro.js"></script>